@model ProyectoAbogadosV2.Models.Jurisdiccion

@{
    ViewBag.Title = "Edit";
}
    <div class="container-fluid">
        <div class="row ">
            <div class="col-12 ml-2 mr-2 mt-1 mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
                <h2>@Html.ActionLink("Jurisdicción", "Index", "Jurisdicciones") / Edición</h2>
            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="bg-grisclaro pt-1 pb-1 col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 col-xs-offset-1 ">

                    <div class="form-horizontal">
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-center pb-1 pt-1 col-lg-12 col-md-10">
                            <input type="submit" value="GUARDAR CAMBIOS" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-1">
                <h5 class="pl-4 ">
                    @Html.ActionLink("VOLVER A JURISDICCIONES", "Index")
                </h5>
            </div>
        </div>
            

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
