@model ProyectoAbogadosV2.Models.Actuacion

@{
    ViewBag.Title = "Details";
}
    <div class="container-fluid">
        <div class="row pl-3 pr-3">
            <div class="col-12   mt-2   pt-2 pl-3 pb-1 bg-grisclaro">
                <h2>@Html.ActionLink("Actuación", "Index", "Actuaciones") / Detalle</h2>
            </div>
            <div class="col-lg-6  col-md-6   col-sm-12 pt-2  bg-grisclaro ">
                <p class="color-grisoscuro-letras">DESCRIPCIÓN:</p>
                <dl class="dl-horizontal">
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Expediente.TituloExpediente)
                    </dt>
                    <dd class="color-azuloscuro bold">
                        @Html.DisplayFor(model => model.Expediente.TituloExpediente)
                    </dd>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.FechaInicio)
                    </dt>
                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.FechaInicio)
                    </dd>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.FechaCierre)
                    </dt>
                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.FechaCierre)
                    </dd>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                </dl>
            </div>
            <div class="col-lg-6  col-md-6   col-sm-12 pt-2  bg-grisclaro ">
                <p class="color-grisoscuro-letras">NOTIFICACIONES:</p>
                <dl class="dl-horizontal">

                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.NotificacionCliente)
                    </dt>
                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.NotificacionCliente)
                    </dd>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.NotificacionJuzgado)
                    </dt>
                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.NotificacionJuzgado)
                    </dd>
                </dl>
                <br />
            </div>
            
            <div class="col-10 ml-6 mr-6 mt-4 mb-2 pl-2 pr-2 pt-2 pb-2 ">
                <h4 class="pt-6"><strong> Documentos </strong> asignados a la actuación:</h4>
                <br />
                <table class="table table-hover table-responsive ml-2 mr-2">
                    <tr class=" bg-grisclaro color-grisoscuro-letras">

                        <th>Expediente</th>
                        <th>Descripcion</th>
                        <th class="visible-lg">Documentación</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Documentos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpedienteId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td class="visible-lg">
                                @Html.DisplayFor(modelItem => item.Documentacion)
                            </td>
                            <td>
                                <div class="hidden-print">

                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <button type="button" class="btn  btn-xs">@Html.ActionLink("CONSULTAR", "Details", "Documentos", new { id = item.Id }, null)</button>
                                        <button type="button" class="btn  btn-xs visible-lg-inline visible-md-inline">@Html.ActionLink("EDITAR", "Edit", "Documentos", new { id = item.Id }, null)</button>
                                        <button type="button" class="btn  btn-xs visible-lg-inline visible-md-inline">@Html.ActionLink("BORRAR", "Delete", "Documentos", new { id = item.Id }, null)</button>

                                    }
                                    @if (User.IsInRole("Usuario"))
                                    {
                                        <button type="button" class="btn  btn-xs">@Html.ActionLink("CONSULTAR", "Details", "Documentos", new { id = item.Id }, null)</button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </table>

                <div class="col-12 ml-2 mr-2">
                    <nav aria-label="...">
                        <ul class="pager">
                            <li class="previous"> @Html.ActionLink("NUEVO DOCUMENTO", "SubirArchivo", "Documentos", new { idActuacion = Model.Id }, null)</li>
                        </ul>
                    </nav>
                </div>                
            </div>
            <div>
                @if (User.IsInRole("Administrador"))
                {
                    <nav aria-label="...">
                        <ul class="pager">                            
                            <li class="previous">
                                @Html.ActionLink("VOLVER A ACTUACIONES", "Index")
                            </li>
                        </ul>
                    </nav>
                }
                @if (User.IsInRole("Usuario"))
                {
                    <nav aria-label="...">
                        <ul class="pager">
                            <li class="previous">
                                @Html.ActionLink("VOLVER A ACTUACION", "Index")
                                </li></ul></nav>
                                }
                </div>

        </div></div>
