@model ProyectoAbogadosV2.Models.Cliente

@{
    ViewBag.Title = "Details";
}
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 ml-2 mr-2 mt-2 pt-1 pl-2 pb-1 bg-grisclaro">
                <h2>@Html.ActionLink("Cliente", "Index", "Clientes") / Detalle</h2>
            </div>
        </div>
        <div class="row pl-2 pr-2 ">
            <div class="col-lg-3  col-md-6   col-sm-12 pt-2  bg-grisclaro">
                <p class="color-grisoscuro-letras">DATOS PERSONALES:</p>
                <dl class="dl-horizontal">
                    
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd class="color-azuloscuro bold">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>


                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Apellidos)
                    </dt>

                    <dd class="color-azuloscuro bold">
                        @Html.DisplayFor(model => model.Apellidos)
                    </dd>

                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.NifCliente)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.NifCliente)
                    </dd>
                </dl>
            </div>
            <div class="col-lg-3  col-md-6   col-sm-12 pt-2  bg-grisclaro">
                <dl class="dl-horizontal">
                    <p class="color-grisoscuro-letras">CONTACTO:</p>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.MovilCliente)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.MovilCliente)
                    </dd>

                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.FijoCliente)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.FijoCliente)
                    </dd>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
            </div>
            <div class="col-lg-3  col-md-6   col-sm-12 pt-2  bg-grisclaro">
                <dl class="dl-horizontal">
                    <p class="color-grisoscuro-letras">DATOS DESPACHO:</p>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.FechaIngreso)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.FechaIngreso)
                    </dd>

                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.FechaBaja)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.FechaBaja)
                    </dd>
                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Descripcion_Cliente)
                    </dt>
                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.Descripcion_Cliente)
                    </dd>

                </dl>
            </div>
            <div class="col-lg-3  col-md-6   col-sm-12 pt-2  bg-grisclaro">
                <dl class="dl-horizontal bg-grisclaro00">

                    <p class="color-grisoscuro-letras">DIRECCIÓN:</p>
                    <dt class="color-grisoscuro-letras1 ">
                        @Html.DisplayNameFor(model => model.Direccion_Cliente)
                    </dt>

                    <dd class="color-grisoscuro-letras2 ">
                        @Html.DisplayFor(model => model.Direccion_Cliente)
                    </dd>

                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Poblacion_Cliente)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.Poblacion_Cliente)
                    </dd>

                    <dt class="color-grisoscuro-letras1">
                        @Html.DisplayNameFor(model => model.Cp_Cliente)
                    </dt>

                    <dd class="color-grisoscuro-letras2">
                        @Html.DisplayFor(model => model.Cp_Cliente)
                    </dd>

                </dl>
            </div>
        </div>
        @* Se añade código para presentar los expedientes del cliente seleccionado *@
    <div class="ml-6 mr-6 mt-2 mb-2">
        <h4>Los expedientes de <strong> @Html.DisplayFor(model => model.Nombre) </strong> son:</h4>
        <br />
        <table class="table table-hover table-responsive ml-2 mr-2">
            <tr class=" bg-grisclaro color-grisoscuro-letras">
                <th>Titulo Expediente</th>
                <th class="hidden-xs">Fecha Inicio</th>
                <th class="visible-lg">Fecha Cierre</th>
                <th>Descripción</th>
                <th>Abogado</th>
                <th class="visible-lg">Jurisdicción</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Expedientes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TituloExpediente)
                    </td>
                    <td class="hidden-xs">
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td class="visible-lg">
                        @Html.DisplayFor(modelItem => item.FechaCierre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abogado.NombreAbogado)
                    </td>
                    <td class="visible-lg">
                        @Html.DisplayFor(modelItem => item.Jurisdiccion.Nombre)
                    </td>
                    <td>
                        <div class="hidden-print">
                            <button type="button" class="btn btn-xs ">@Html.ActionLink("DETALLE ", "Details", "Expedientes", new { id = item.Id }, null)</button>


                            <button type="button" class="btn  btn-xs visible-lg-inline visible-md-inline hidden-xs	">@Html.ActionLink("EDITAR", "Edit", "Expedientes", new { id = item.Id }, null)</button>
                            <button type="button" class="btn  btn-xs visible-lg-inline visible-md-inline hidden-xs	">@Html.ActionLink("BORRAR", "Delete", "Expedientes", new { id = item.Id }, null)</button>

                        </div>
                    </td>
                </tr>
            }
        </table>
        @* Se añade para poder imprimir la página *@
        <div class="hidden-print text-center">
            <a class="btn btn-default" href="javascript:window.print()">Imprimir</a>
        </div>

        <div class="hidden-print text-left">
            <nav aria-label="...">
                <ul class="pager">
                    <li class="previous">@Html.ActionLink("VOLVER A CLIENTES", "Index")</li>

                </ul>
            </nav>

        </div>
        
    </div>
    </div>
        
    
