@* Se añade código para presentar los expedientes del cliente seleccionado *@
<div>
    <h4>Expedientes asignados al cliente</h4>
    <table class="table">
        <tr>
            <td>Titulo Expediente</td>
            <td>Fecha Inicio</td>
            <td>Fecha Cierre</td>
            <td>Descripción</td>
            <td>Cliente</td>
            <td>Jurisdicción</td>
            <td></td>
        </tr>
        @foreach (var item in Model.Expedientes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TituloExpediente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCierre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abogado.NombreAbogado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jurisdiccion.Nombre)
                </td>
                <td>
                    <div class="hidden-print">
                        @Html.ActionLink("Edit", "Edit", "Expedientes", new { id = item.Id }, null) |
                        @Html.ActionLink("Delete", "Delete", "Expedientes", new { id = item.Id }, null)
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
