@model ProyectoAbogadosV2.Models.Expediente

@{
    ViewBag.Title = "Create";
}
<div class="container-fluid">
    <div class="row ">
        <div class="col-12 ml-2 mr-2 mt-1 mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
            <h2>@Html.ActionLink("Expediente", "Index", "Expedientes") / Crear</h2>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="bg-grisclaro pt-1 pb-1 col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 col-xs-offset-1 ">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.TituloExpediente, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.EditorFor(model => model.TituloExpediente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TituloExpediente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @*@Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.JQueryUI().DatepickerFor(model => model.FechaInicio).ShowButtonPanel(true).ChangeYear(true).ChangeMonth(true)
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaCierre, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @*@Html.EditorFor(model => model.FechaCierre, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.JQueryUI().DatepickerFor(model => model.FechaCierre).ShowButtonPanel(true).ChangeYear(true).ChangeMonth(true)
                            @Html.ValidationMessageFor(model => model.FechaCierre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AbogadoId, "AbogadoId", htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.DropDownList("AbogadoId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AbogadoId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ClienteId, "ClienteId", htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.DropDownList("ClienteId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ClienteId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.JurisdiccionId, "JurisdiccionId", htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.DropDownList("JurisdiccionId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.JurisdiccionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProvisionFondos, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.EditorFor(model => model.ProvisionFondos, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProvisionFondos, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TotalMinuta, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                        <div class="col-lg-9 col-md-8 ">
                            @Html.EditorFor(model => model.TotalMinuta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TotalMinuta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="CREAR" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-1">
            <h5 class="pl-4 ">
                @Html.ActionLink("VOLVER A EXPEDIENTES", "Index")
            </h5>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
