@model ProyectoAbogadosV2.Models.Expediente

@{
    ViewBag.Title = "Delete";
}
<div class="container-fluid">
    <div class="row ">
        <div class="col-12 ml-2 mr-2 mt-1  pt-1 pl-2 pb-1 bg-grisclaro">
            <h2>@Html.ActionLink("Expediente", "Index", "Expedientes") / Eliminar</h2>
        </div>
        <div class="col-12 ml-2 mr-2  mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
            <h3 class="text-danger">¿Está seguro que desea eliminar  " @Html.DisplayFor(model => model.TituloExpediente) "?</h3>
        </div>
        <div class="bg-grisclaro mt-2 mb-2 pt-1 pb-1 col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 col-xs-offset-1 ">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.TituloExpediente)
                </dt>

                <dd class="color-azuloscuro">
                    @Html.DisplayFor(model => model.TituloExpediente)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Abogado.NombreAbogado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Abogado.NombreAbogado)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Cliente.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cliente.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Jurisdiccion.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Jurisdiccion.Nombre)
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaInicio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaCierre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaCierre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ProvisionFondos)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProvisionFondos)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TotalMinuta)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TotalMinuta)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color text-center">

                    <input type="submit" value="ELIMINAR" class="btn btn-default btn-danger" />

                </div>

            }
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-1">
            <h5 class="pl-4 ">
                @Html.ActionLink("VOLVER A EXPEDIENTES", "Index")
            </h5>
        </div>

    </div>
</div>
