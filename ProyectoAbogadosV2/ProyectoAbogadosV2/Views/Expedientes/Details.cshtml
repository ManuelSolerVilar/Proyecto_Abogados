@* Se añade código para presentar los expedientes del cliente seleccionado *@
<div>
    <h4>Actuaciones asignadas al expediente</h4>
    <table class="table">
        <tr>

            <td>Fecha Inicio</td>
            <td>Fecha Cierre</td>
            <td>Descripción</td>
            <td>Notificación Cliente</td>
            <td>Notificación Juzgado</td>
            <td></td>
        </tr>
        @foreach (var item in Model.Actuaciones)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificacionCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificacionJuzgado)
                </td>

                <td>
                    <div class="hidden-print">
                        @Html.ActionLink("CONSULTAR ACTUACIÓN", "Details", "Actuaciones", new { id = item.Id }, null) |
                        @Html.ActionLink("EDITAR", "Edit", "Actuaciones", new { id = item.Id }, null) |
                        @Html.ActionLink("BORRAR", "Delete", "Actuaciones", new { id = item.Id }, null) 

                    </div>
                </td>
            </tr>
        }
    </table>
</div>
