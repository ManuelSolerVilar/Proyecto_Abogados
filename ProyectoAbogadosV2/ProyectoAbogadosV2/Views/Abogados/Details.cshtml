@model ProyectoAbogadosV2.Models.Abogado

@{
    ViewBag.Title = "Details";
}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 ml-4 mr-4">
                <h2>@Html.ActionLink("Abogado", "Index", "Abogados") / Detalle</h2>
            </div>
        </div>
        <hr />
    </div>
    <div class="row pl-2 pr-2 ">
        <div class="col-lg-4  col-md-6   col-sm-12 pt-2  bg-grisclaro">
            <p class="color-grisoscuro-letras">DATOS PERSONALES:</p>

            <dl class="dl-horizontal">
                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.NombreAbogado)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.NombreAbogado)
                </dd>

                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.ApellidosAbogado)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.ApellidosAbogado)
                </dd>

                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.NifAbogado)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.NifAbogado)
                </dd>
            </dl>
        </div>
        <div class="col-lg-4  col-md-6   col-sm-12 pt-2  bg-grisclaro">
            <p class="color-grisoscuro-letras">CONTACTO:</p>

            <dl class="dl-horizontal">
                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.MovilAbogado)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.MovilAbogado)
                </dd>

                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.FijoAbogado)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.FijoAbogado)
                </dd>

                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
        <div class="col-lg-4  col-md-6   col-sm-12 pt-2  bg-grisclaro">
            <p class="color-grisoscuro-letras">DATOS DESPACHO:</p>

            <dl class="dl-horizontal">
                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.Direccion_Cliente)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.Direccion_Cliente)
                </dd>

                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.Poblacion_Cliente)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.Poblacion_Cliente)
                </dd>

                <dt class="color-grisoscuro-letras1">
                    @Html.DisplayNameFor(model => model.Cp_Cliente)
                </dt>

                <dd class="color-grisoscuro-letras2">
                    @Html.DisplayFor(model => model.Cp_Cliente)
                </dd>

            </dl>
        </div>
    </div>
        @* Se añade código para presentar los expedientes del cliente seleccionado *@
<div>
    <div class="row">
        <div class="col-11 ml-4 mr-4 mt-2">
            <h4>
                Expedientes asignados a
                <strong> @Html.DisplayFor(model => model.NombreAbogado) </strong>
                son:
            </h4>
            <br />
            <table class="table table-hover table-responsive ml-2 mr-2">
                <tr class=" bg-grisclaro color-grisoscuro-letras">
                    <td>Titulo Expediente</td>
                    <td>Fecha Inicio</td>
                    <td>Fecha Cierre</td>
                    <td>Descripción</td>
                    <td>Cliente</td>
                    <td>Jurisdicción</td>
                    <td></td>
                </tr>
                @foreach (var item in Model.Expedientes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TituloExpediente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCierre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jurisdiccion.Nombre)
                        </td>
                        <td>
                            <div class="hidden-print">
                                @Html.ActionLink("EDITAR", "Edit", "Expedientes", new { id = item.Id }, null) |
                                @Html.ActionLink("BORRAR", "Delete", "Expedientes", new { id = item.Id }, null) |
                                @Html.ActionLink("CONSULTAR EXPEDIENTE ", "Details", "Expedientes", new { id = item.Id }, null)
                            </div>
                        </td>
                    </tr>
                }
            </table>

            @* Se añade para poder imprimir la página *@
            <div class="hidden-print text-center">
                <a class="btn btn-default" href="javascript:window.print()">Imprimir</a>
            </div>
            <div class="hidden-print text-left">
                @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
                <div class="btn btn-default">@Html.ActionLink("Volver a Abogados", "Index")</div>
            </div>
        </div>
    </div>
</div>