@model ProyectoAbogadosV2.Models.Abogado

@{
    ViewBag.Title = "Delete";
}
    <div class="container-fluid">
        <div class="row ">
            <div class="col-12 ml-2 mr-2 mt-1  pt-1 pl-2 pb-1 bg-grisclaro">
                <h2>@Html.ActionLink("Abogado", "Index", "Abogados") / Eliminar</h2>
            </div>
            <div class="col-12 ml-2 mr-2  mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
