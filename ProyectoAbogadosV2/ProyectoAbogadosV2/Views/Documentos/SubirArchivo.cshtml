
@{
    ViewBag.Title = "SubirArchivo";
}
    <div class="container-fluid">
        <div class="row ">
            <div class="col-12 ml-2 mr-2 mt-1 mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
                <h2>@Html.ActionLink("Documento", "Index", "Documentos") / Subir Archivo</h2>
            </div>
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-11 pl-4 pr-4 pb-2 pt-2  bg-grisclaro">

                <h2 class="text-danger">@ViewBag.Error</h2>
                <h2 class="text-success">@ViewBag.Correcto</h2>

                <form method="post" enctype="multipart/form-data" class="form-horizontal ml-4 pl-4">
                    @*Html.DropDownList("a",(IEnumerable<SelectListItem>)ViewBag.ListaTipoAverias, ViewBag.FiltroActual as string);*@
                    <div class="form-group col-lg-12 mt-1 mb-1">
                        <input type="file" name="file" />
                    </div>
                    <div class="form-group col-lg-6 mt-1 mb-1">
                        <input type="text" name="description" />
                        
                        <label class="ml-2">Introduzca en nombre del documento.</label>
                    </div>
                    <div class="form-group col-lg-12 mt-1 mb-1">
                        <p class="text-primary">Los ficheros no pueden superar los 20MB de tamaño.</p></div>
                    <div class="form-group col-lg-12 mt-1 mb-1">
                        <button type="submit">SUBIR ARCHIVO</button></div>
</form>
            </div>
                <div class="col-lg-12 ml-2 mr-2 mt-1 mb-1 pt-1 pl-2 pb-1 ">
                    <p>

                        @Html.ActionLink("VOLVER A DOCUMENTOS", "Index")
                    </p>
                </div>
            </div>
        </div>