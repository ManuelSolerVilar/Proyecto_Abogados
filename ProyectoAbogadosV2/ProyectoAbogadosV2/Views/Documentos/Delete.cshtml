@model ProyectoAbogadosV2.Models.Documento

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">
    <div class="row ">
        <div class="col-12 ml-2 mr-2 mt-1  pt-1 pl-2 pb-1 bg-grisclaro">
            <h2>@Html.ActionLink("Documento", "Index", "Documentos") / Eliminar</h2>
        </div>
        <div class="col-12 ml-2 mr-2  mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
            <h3 class="text-danger">¿Está seguro que desea eliminar @Html.DisplayFor(model => model.Descripcion)?</h3>
        </div>
        <div class="bg-grisclaro mt-2 mb-2 pt-1 pb-1 col-lg-6 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 col-xs-offset-1 ">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd class="color-azuloscuro">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.ExpedienteId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ExpedienteId)
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.Documentacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Documentacion)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">

                    <input type="submit" value="ELIMINAR" class="btn btn-default btn-danger" />

                </div>


            }
        </div>        
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-1 ml-2">
            <nav aria-label="...">
                <ul class="pager">
                    <li class="previous"> @Html.ActionLink("VOLVER A DOCUMENTOS", "Index")</li>
                </ul>
            </nav>
        </div>

    </div>
</div>