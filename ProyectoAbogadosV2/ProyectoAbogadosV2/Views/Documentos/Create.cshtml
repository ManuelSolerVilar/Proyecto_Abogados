@model ProyectoAbogadosV2.Models.Documento

@{
    ViewBag.Title = "Create";
}
    <div class="container-fluid">
        <div class="row ">
            <div class="col-12 ml-2 mr-2 mt-1 mb-1 pt-1 pl-2 pb-1 bg-grisclaro">
                <h2>@Html.ActionLink("Documento", "Index", "Documentos") / Crear</h2>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="bg-grisclaro pt-1 pb-1 col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 col-xs-offset-1 ">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.ExpedienteId, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                            <div class="col-lg-9 col-md-8 ">
                                @Html.EditorFor(model => model.ExpedienteId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ExpedienteId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                            <div class="col-lg-9 col-md-8 ">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Documentacion, htmlAttributes: new { @class = " color-azuloscuro control-label col-lg-3 col-md-4" })
                            <div class="col-lg-9 col-md-8 ">
                                @Html.EditorFor(model => model.Documentacion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Documentacion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="CREAR" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-1">
                <h5 class="pl-4 ">
                    @Html.ActionLink("VOLVER A DOCUMENTOS", "Index")
                </h5>
            </div>
        </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
