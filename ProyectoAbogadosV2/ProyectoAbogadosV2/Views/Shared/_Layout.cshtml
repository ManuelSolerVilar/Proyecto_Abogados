        <div class="container-fluid bg-white ">

            <div class="navbar-header ">

                <button type="button" class="navbar-toggle colortortuga " data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>


                </button>
                <div class="">
                    @* <a class="navbar-brand" href="#">S</a>*@
                    @Html.ActionLink("Soler Abogados", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse bg-white">
                <ul class="nav navbar-nav ">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Usuario"))
                        {
                            <li>@Html.ActionLink("EXPEDIENTES", "Index", "Expedientes")</li>
                            <li>@Html.ActionLink("DOCUMENTOS", "Index", "Documentos")</li>
                            <li>@Html.ActionLink("ACTUACIONES", "Index", "Actuaciones")</li>
                            @*<li>@Html.ActionLink("CONTACTO", "Contact", "Home")</li>*@
                        }
                        if (User.IsInRole("Administrador"))
                        {
                            <li>@Html.ActionLink("CLIENTES", "Index", "Clientes")</li>
                            <li>@Html.ActionLink("ABOGADOS", "Index", "Abogados")</li>
                            <li>@Html.ActionLink("EXPEDIENTES", "Index", "Expedientes")</li>
                            <li class="visible-lg">@Html.ActionLink("ACTUACIONES", "Index", "Actuaciones")</li>
                            <li class="visible-lg">@Html.ActionLink("DOCUMENTOS", "Index", "Documentos")</li>
                            <li class="visible-lg">@Html.ActionLink("JURISDICCIONES", "Index", "Jurisdicciones")</li>
                            @* <li>@Html.ActionLink("REGISTRAR NUEVO CLIENTE", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
                        }
                    }
                    else
                    {
                        @*<li>@Html.ActionLink("Abogados", "Index", "Abogados")</li>
                            <li>@Html.ActionLink("Expedientes", "Index", "Expedientes")</li>
                            <li>@Html.ActionLink("Documentos", "SubirArchivo", "Documentos")</li>
                            <li>@Html.ActionLink("Actuaciones", "Index", "Actuaciones")</li>
                            <li>@Html.ActionLink("Jurisdicciones", "Index", "Jurisdicciones")</li>*@
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
